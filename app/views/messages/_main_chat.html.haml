.chat-main
  .chat-main__header
    .chat-main__header__left-box
      .chat-main__header__left-box__current-group
        =@group.name
      .chat-main__header__left-box__member-list
        member:
        - @group.users.each do |user|
          =user.name
    =link_to edit_group_path(@group.id), class: "chat-main__header__edit-btn" do
      Edit
  .chat-main__messages
    = render @messages
    .chat-main__messages__message
      .chat-main__messages__message__upper-info
        .chat-main__messages__message__upper-info__talker
        .chat-main__messages__message__upper-info__date
      .chat-main__messages__message__text
      .chat-main__messages__message__img
  .chat-main__form
    = form_for [@group, @message], html: {class: "chat-main__form__new-message"} do |f|
      .chat-main__form__new-message__input-box
        = f.text_field :content, class: 'chat-main__form__new-message__input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'chat-main__form__new-message__input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'chat-main__form__new-message__input-box__image__file'
      = f.submit 'Send', class: 'chat-main__form__new-message__submit-btn'