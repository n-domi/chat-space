.side-bar
  .side-bar__header
    %h3.header__box
      = current_user.name
    %ul.header__lists
      %li.header__lists__list
        = link_to new_group_path do
          = icon('fas', 'edit', class: 'icon')
      %li.header__lists__list
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .side-bar__groups
    - current_user.groups.each do |group| 
      .side-bar__groups__group
        = link_to group_messages_path(group), class:"link" do
          .side-bar__groups__group__group__name
            = group.name
          .side-bar__groups__group__group__message
            = group.show_last_message


